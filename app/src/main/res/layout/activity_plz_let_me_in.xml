<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F5E81">

    <TextView
        android:id="@+id/textView"
        android:layout_width="274dp"
        android:layout_height="128dp"
        android:text="@string/plz"
        android:textAlignment="center"
        android:textColor="#E8EAEF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/Yesbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_me"
        android:textAlignment="center"
        android:textSize="104sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Yesbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="110dp"
        android:height="54dp"
        android:backgroundTint="#814F4F"
        android:text="@string/no_codepath_for_u"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/Nobutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Nobutton"
        app:layout_constraintTop_toTopOf="@+id/Nobutton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Nobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:width="110dp"
        android:height="54dp"
        android:backgroundTint="#58814F"
        android:text="@string/u_in_bozo"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Yesbutton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>